<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_partner_form_fp_identification" model="ir.ui.view">
        <field name="name">res.partner.form.fp.identification</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='vat']" position="after">
                <field name="fp_identification_type"/>
                <field name="fp_economic_activity_id"/>
                <button name="action_fp_fetch_hacienda_data" string="Consultar Hacienda" type="object" class="oe_highlight"/>
            </xpath>

            <xpath expr="//field[@name='state_id']" position="attributes">
                <attribute name="string">Provincia</attribute>
            </xpath>

            <xpath expr="//field[@name='city']" position="attributes">
                <attribute name="string">Cantón</attribute>
                <attribute name="placeholder">Cantón</attribute>
                <attribute name="class">o_address_city</attribute>
            </xpath>

            <xpath expr="//field[@name='street']" position="attributes">
                <attribute name="string">OtrasSeñas</attribute>
            </xpath>

            <xpath expr="//field[@name='city']" position="after">
                <field name="fp_district_code" string="Distrito" placeholder="Distrito" class="o_address_state"/>
                <field name="fp_neighborhood_code" string="Barrio" placeholder="Barrio" class="o_address_zip"/>
            </xpath>
        </field>
    </record>
</odoo>
