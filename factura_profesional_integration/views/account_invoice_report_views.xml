<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_invoice_document_fp_electronic_header" inherit_id="account.report_invoice_document">
        <xpath expr="//t[@t-set='layout_document_title']" position="after">
            <t t-if="o.fp_is_electronic_invoice">
                <t t-set="layout_document_title">
                    <t t-set="fp_document_types" t-value="{
                        'FE': 'Factura Electrónica',
                        'TE': 'Tiquete Electrónico',
                        'FEC': 'Factura Electrónica de Compra',
                        'NC': 'Nota de Crédito Electrónica',
                        'ND': 'Nota de Débito Electrónica',
                        'CCE': 'Confirmación de Aceptación',
                        'CPCE': 'Confirmación Parcial de Aceptación',
                        'RCE': 'Confirmación de Rechazo'
                    }"/>
                    <div class="fp-electronic-title">
                        <strong>Tipo de documento (FE, TE, NC, ND, FEE)</strong>
                        <div>
                            <span t-esc="fp_document_types.get(o.fp_document_type, 'Comprobante Electrónico')"/>
                        </div>
                    </div>
                </t>
            </t>
        </xpath>

        <xpath expr="//t[@t-set='address']" position="after">
            <t t-if="o.fp_is_electronic_invoice" t-set="address">
                <div/>
            </t>
        </xpath>

        <xpath expr="//div[@id='informations']" position="attributes">
            <attribute name="t-if">not o.fp_is_electronic_invoice</attribute>
        </xpath>

        <xpath expr="//div[@id='informations']" position="before">
            <t t-if="o.fp_is_electronic_invoice">
                <style>
                    .fp-doc-heading {
                        font-size: 20px;
                        font-weight: 700;
                        text-transform: uppercase;
                        letter-spacing: 0.8px;
                        color: #0b0f19;
                        margin: 8px 0 14px 0;
                    }
                    .fp-reference-line {
                        font-size: 15px;
                        margin-bottom: 2px;
                        color: #141d2e;
                    }
                    .fp-reference-line .fp-label-inline {
                        font-weight: 700;
                    }
                    .fp-section-title {
                        font-size: 19px;
                        font-weight: 700;
                        margin: 14px 0 8px 0;
                        color: #111827;
                    }
                    .fp-card {
                        border: 2px solid #1b2c96;
                        border-radius: 18px;
                        padding: 12px 14px;
                        margin: 8px 0;
                        background: #f8faff;
                        width: 100%;
                    }
                    .fp-grid {
                        width: 100%;
                        border-collapse: separate;
                        border-spacing: 0 6px;
                        border: none !important;
                    }
                    .fp-grid tr,
                    .fp-grid td {
                        vertical-align: top;
                        font-size: 15px;
                        color: #111827;
                        padding: 0;
                        border: none !important;
                        box-shadow: none !important;
                        background: transparent !important;
                    }
                    .fp-grid td.fp-cell {
                        padding-right: 24px;
                    }
                    .fp-grid td.fp-cell:last-child {
                        padding-right: 0;
                    }
                    .fp-grid .fp-label {
                        font-weight: 700;
                        margin-right: 4px;
                    }
                    .fp-wide {
                        width: 100%;
                    }
                </style>

                <div class="fp-doc-heading">Factura Electrónica</div>

                <div class="fp-reference-line">
                    <span class="fp-label-inline">Consecutivo:</span>
                    <span t-field="o.fp_consecutive_number"/>
                </div>
                <div class="fp-reference-line">
                    <span class="fp-label-inline">Clave:</span>
                    <span t-field="o.fp_external_id"/>
                </div>

                <div class="fp-card">
                    <table class="fp-grid">
                        <tr>
                            <td class="fp-cell"><span class="fp-label">Fecha:</span><span t-field="o.invoice_date"/></td>
                            <td class="fp-cell"><span class="fp-label">Condición de venta:</span><span t-field="o.fp_sale_condition"/></td>
                            <td class="fp-cell"><span class="fp-label">Moneda:</span><span t-field="o.currency_id"/></td>
                        </tr>
                        <tr>
                            <td class="fp-cell"><span class="fp-label">Vencimiento:</span><span t-field="o.invoice_date_due"/></td>
                            <td class="fp-cell"><span class="fp-label">Medio de pago:</span><span t-field="o.fp_payment_method"/></td>
                            <td class="fp-cell"><span class="fp-label">Tipo de cambio:</span><span t-esc="'%.6f' % (o.invoice_currency_rate or 1.0)"/></td>
                        </tr>
                    </table>
                </div>

                <div class="fp-section-title">Datos del receptor:</div>
                <div class="fp-card">
                    <table class="fp-grid">
                        <tr>
                            <td class="fp-cell"><span class="fp-label">Cliente:</span><span t-field="o.partner_id"/></td>
                            <td class="fp-cell"><span class="fp-label">Correo:</span><span t-field="o.partner_id.email"/></td>
                        </tr>
                        <tr>
                            <td class="fp-cell"><span class="fp-label">Identificación:</span><span t-esc="o.partner_id.vat or ''"/></td>
                            <td class="fp-cell"><span class="fp-label">Teléfono:</span><span t-field="o.partner_id.phone"/></td>
                        </tr>
                        <tr>
                            <td class="fp-cell fp-wide" colspan="2"><span class="fp-label">Dirección:</span>
                                <span t-if="o.partner_id.country_id.code == 'CR'" t-esc="', '.join([part for part in [o.partner_id.street, o.partner_id.fp_neighborhood_code, o.partner_id.fp_district_code, o.partner_id.city, o.partner_id.state_id.name] if part])"/>
                                <span t-if="o.partner_id.country_id.code != 'CR'" t-field="o.partner_id.contact_address"/>
                            </td>
                        </tr>
                    </table>
                </div>
            </t>
        </xpath>


        <xpath expr="//td[@name='account_invoice_line_name']/span[@t-field='line.name']" position="before">
            <span t-if="line.product_id and line.product_id.fp_cabys_code" t-esc="'[' + line.product_id.fp_cabys_code + '] '"/>
        </xpath>

        <xpath expr="//div[contains(@class, 'page')]" position="inside">
            <t t-if="o.fp_is_electronic_invoice">
                <div class="mt-4 text-muted" style="font-size: 11px;">
                    Emitida conforme lo establecido en la resolución de Facturación Electrónica,
                    MH-DGT-RES-0027-2024 del 19 de noviembre de 2024 de la Dirección General de Tributación Directa.
                </div>
            </t>
        </xpath>
    </template>
</odoo>
