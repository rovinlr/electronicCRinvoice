<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_product_template_form_fp" model="ir.ui.view">
        <field name="name">product.template.form.fp</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='uom_id']" position="after">
                <label for="fp_cabys_code_id" string="Código CABYS"/>
                <div>
                    <field name="fp_cabys_code_id" nolabel="1"/>
                </div>
            </xpath>
        </field>
    </record>

    <record id="view_product_normal_form_fp" model="ir.ui.view">
        <field name="name">product.product.normal.form.fp</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='uom_id']" position="after">
                <label for="fp_cabys_code_id" string="Código CABYS"/>
                <div>
                    <field name="fp_cabys_code_id" nolabel="1"/>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
