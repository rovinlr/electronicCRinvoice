<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_move_tree_fp_documents" model="ir.ui.view">
        <field name="name">account.move.tree.fp.documents</field>
        <field name="model">account.move</field>
        <field name="arch" type="xml">
            <list string="Documentos Electrónicos" create="false" edit="false" delete="false">
                <field name="name" string="Factura"/>
                <field name="invoice_date" string="Fecha"/>
                <field name="partner_id" string="Cliente"/>
                <field name="fp_external_id" string="Clave"/>
                <field name="fp_consecutive_number" string="Consecutivo"/>
                <field name="fp_xml_attachment_name" string="Factura XML"/>
                <button name="action_fp_download_invoice_xml" string="Descargar XML" type="object" class="btn-link"/>
                <field name="fp_response_xml_attachment_name" string="XML Respuesta Hacienda"/>
                <button name="action_fp_download_response_xml" string="Descargar Respuesta" type="object" class="btn-link"/>
                <field name="fp_invoice_status" string="Estado FE"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <record id="view_move_search_fp_documents" model="ir.ui.view">
        <field name="name">account.move.search.fp.documents</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_account_invoice_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//search" position="inside">
                <filter name="fp_documents" string="Documentos FE" domain="[('fp_is_electronic_invoice','=',True)]"/>
                <filter name="fp_with_xml" string="Con XML" domain="[('fp_xml_attachment_id','!=',False)]"/>
                <filter name="fp_with_response_xml" string="Con XML Respuesta" domain="[('fp_response_xml_attachment_id','!=',False)]"/>
            </xpath>
        </field>
    </record>

    <record id="view_move_form_fp_documents" model="ir.ui.view">
        <field name="name">account.move.form.fp.documents</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="priority">90</field>
        <field name="arch" type="xml">
            <xpath expr="//sheet//group" position="after">
                <group string="Documentos XML Hacienda" invisible="not fp_is_electronic_invoice">
                    <group>
                        <field name="fp_external_id" readonly="1"/>
                        <field name="fp_consecutive_number" readonly="1"/>
                        <field name="fp_xml_attachment_name" readonly="1" string="Factura XML"/>
                        <button name="action_fp_download_invoice_xml" string="Descargar XML Factura" type="object" class="oe_link" invisible="not fp_xml_attachment_id"/>
                    </group>
                    <group>
                        <field name="fp_invoice_status" readonly="1"/>
                        <field name="fp_response_xml_attachment_name" readonly="1" string="XML Respuesta Hacienda"/>
                        <button name="action_fp_download_response_xml" string="Descargar XML Respuesta" type="object" class="oe_link" invisible="not fp_response_xml_attachment_id"/>
                    </group>
                </group>
            </xpath>
        </field>
    </record>

    <record id="action_fp_electronic_documents" model="ir.actions.act_window">
        <field name="name">Documentos Electrónicos</field>
        <field name="res_model">account.move</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="view_move_tree_fp_documents"/>
        <field name="search_view_id" ref="view_move_search_fp_documents"/>
        <field name="domain">[
            ('fp_is_electronic_invoice', '=', True),
            ('move_type', 'in', ['out_invoice', 'out_refund'])
        ]</field>
        <field name="context">{'search_default_posted': 1}</field>
    </record>

    <menuitem
        id="menu_fp_electronic_documents"
        name="Documentos Electrónicos"
        parent="account.menu_finance"
        action="action_fp_electronic_documents"
        sequence="15"
        groups="account.group_account_invoice"
    />
</odoo>
